package main;
import java.util.Scanner;


/*O professor aplicou a avaliação em sua turma
e deseja mostrar se o aluno foi aprovado (nota maior ou igual a 5)
ou reprovado(nota menor que 5). Desenvolva o programa que leia a
 nota do aluno e gere a tela de saída com
as informações solicitadas.
*/


public class Exercício_4_Aula_2 {
   public static void main(String[] args) {
       Scanner sc = new Scanner(System.in);
       Double nota;


       System.out.println("Digite a nota do aluno: ");
       nota = sc.nextDouble();


       if (nota >= 5){
           System.out.println("O aluno foi aprovado!");
       }


       else {
           System.out.println("O aluno foi reprovado!");
       }
   }
}
